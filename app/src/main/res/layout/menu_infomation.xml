<?xml version="1.0" encoding="utf-8"?>
<!--最新推荐页item中 详细-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    android:background="#F5F3EF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/info_menuImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/menu_back"

                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:id="@+id/collect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/menu_collect"
                />

            <TextView
                android:id="@+id/imtro"
                android:layout_width="240dp"
                android:layout_height="340dp"
                android:layout_marginTop="120dp"
                android:background="@android:color/white"
                android:layout_centerHorizontal="true"
                android:textColor="#AFAFAF"

                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="40dp"
            android:background="@android:color/white"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="食材明细"
                android:textColor="#AFAFAF"
                android:gravity="bottom"
                android:layout_marginLeft="30dp"
                >
            </TextView>

            <View  android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#AFAFAF"

                />
            <!--主食材-->
            <TextView
                android:id="@+id/ingredients"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#AFAFAF"
                />
            <!--配料-->
            <TextView
                android:id="@+id/burden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"/>


            <Button
                android:id="@+id/m_info_weigh"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="开始称量"
                android:layout_marginTop="30dp"
                android:background="@drawable/menu_radius"
                android:textSize="25sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="40dp"
            android:background="@android:color/white"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="做法"
                android:textColor="#AFAFAF"
                android:gravity="bottom"
                android:layout_marginLeft="30dp"
                >
            </TextView>
            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#AFAFAF"
                />
            <ListView
                android:id="@+id/menu_info_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:divider="@null"
                >
            </ListView>
        </LinearLayout>




    </LinearLayout>
</ScrollView>